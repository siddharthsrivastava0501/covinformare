{
    "name": "Covinformare",
    "description": "Preventing the spread of Covid-related misinformation",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": ["activeTab", "geolocation", "notifications", "<all_urls>", "tabs"],

    "background": {
        "scripts": ["background.js"]
    },

    "web_accessible_resources" : [
        "background.js"
    ],
    
    "browser_action": {
        "default_icon": "imgs/icon128.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "128": "imgs/icon128.png",
        "48": "imgs/icon48.png",
        "16": "imgs/icon16.png"
    },
    
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}
    