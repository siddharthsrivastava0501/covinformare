{
    "name": "Covinformare ",
    "description": "Preventing the spread of Covid-related misinformation",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": ["activeTab", "geolocation", "notifications", "<all_urls>"],

    "background": {
        "service_worker": "background.js"
    },
    "browser_action": {
        "default_icon": "imgs/icon128.jpeg",
        "default_popup": "popup.html"
    },
    "icons": {
        "128": "imgs/icon128.jpeg",
        "48": "imgs/icon48.jpeg",
        "16": "imgs/icon16.jpeg"
    },
    
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
    

}
    